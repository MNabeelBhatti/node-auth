<div class="px-4 py-5 my-5 text-center">
    <img
      class="d-block mx-auto mb-4"
      src="https://uilogos.co/img/logomark/u-mark.png"
      alt=""
      width="auto"
      height="150"
    />
    <h1 class="display-5 fw-bold">Enter Email Here</h1>
    <div class="col-lg-3 mx-auto">
      <form action="/auth/forgotPassword" method="POST">
        <div class="mb-2">
          <label for="email" id="mail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Email"
            required
          />
        </div>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
      </form>
      <h3>or</h3>
      <a href="/auth/register" type="button" class="btn btn-primary">Register</a>
    </div>
  </div>
  